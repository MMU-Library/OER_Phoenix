# ============================================
# Django settings
# ============================================

# Generate a long random string before first run
DJANGO_SECRET_KEY=change-me-to-a-long-random-string

# Development defaults
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0


# ============================================
# Postgres (Docker + entrypoint)
# ============================================

# Used by the db container and entrypoint to create the database
POSTGRES_DB=oer_rebirth
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres


# ============================================
# Django database settings
# ============================================

# These usually mirror the POSTGRES_* values above
DB_NAME=oer_rebirth
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432


# ============================================
# Celery / Redis
# ============================================

CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0


# ============================================
# Talis API (optional)
# ============================================

TALIS_TENANT=your-tenant
TALIS_CLIENT_ID=your-client-id
TALIS_CLIENT_SECRET=your-client-secret


# ============================================
# Local LLM (optional but recommended)
# ============================================

# If the LLM runs on the host: use host.docker.internal for Docker Desktop
LOCAL_LLM_URL=http://host.docker.internal:11434
LOCAL_LLM_MODEL=deepseek-r1:32b
LOCAL_LLM_TIMEOUT=20

# Set to True only when an LLM is available
ENABLE_LLM_ENRICHMENT=False
